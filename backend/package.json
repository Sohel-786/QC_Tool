{
  "name": "qc-tool-backend",
  "version": "1.0.0",
  "description": "QC Tool Management Backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db": "prisma db push",
    "generate-schema": "ts-node prisma/merge-schema.ts",
    "migrate": "npm run generate-schema && npx prisma migrate dev --name ${npm_config_name:-init} && npx prisma generate",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "db:run-settings-migration": "npx prisma db execute --file prisma/add-admin-role-and-settings.sql --schema prisma/schema.prisma",
    "db:fix-datetimes": "npx prisma db execute --file prisma/fix-invalid-datetimes.sql --schema prisma/schema.prisma",
    "seed": "npx ts-node src/database/seed-mass.ts",
    "seed:mass": "npx ts-node src/database/seed-mass.ts",
    "seed:fresh": "npx ts-node src/database/seed-mass.ts --clean"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.0.5",
    "xlsx": "^0.18.5",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.28",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.0",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
