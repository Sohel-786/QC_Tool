// Which role can view which section and perform which actions (view / add / edit per section)
model RolePermission {
  id                  Int      @id @default(autoincrement())
  role                String   @unique @db.VarChar(20)  // QC_USER, QC_MANAGER, QC_ADMIN
  viewDashboard       Boolean  @default(true)
  viewMaster          Boolean  @default(true)
  viewOutward         Boolean  @default(true)
  viewInward          Boolean  @default(true)
  viewReports         Boolean  @default(true)
  importExportMaster  Boolean  @default(false)
  addOutward          Boolean  @default(true)
  editOutward         Boolean  @default(true)
  addInward           Boolean  @default(true)
  editInward          Boolean  @default(true)
  addMaster           Boolean  @default(true)
  editMaster          Boolean  @default(true)
  manageUsers         Boolean  @default(false)
  accessSettings      Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("role_permissions")
}
