enum Role {
  QC_USER
  QC_MANAGER
  QC_ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  firstName String
  lastName  String
  role      Role     @default(QC_USER)
  isActive  Boolean  @default(true)
  avatar    String?  // filename from /assets/avatar/ (e.g. default-avatar.svg)
  createdBy Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  issuedIssues    Issue[]    @relation("IssuedBy")
  returnedReturns Return[]   @relation("ReturnedBy")
  auditLogs AuditLog[]

  @@map("users")
}
