enum ToolStatus {
  AVAILABLE
  ISSUED
  MISSING
}

model Tool {
  id          Int         @id @default(autoincrement())
  toolCode    String      @unique
  toolName    String
  serialNumber String?    @unique
  description String?
  image       String?
  categoryId  Int?
  status      ToolStatus  @default(AVAILABLE)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  issues   Issue[]
  category ToolCategory? @relation(fields: [categoryId], references: [id])

  @@map("tools")
}

model ToolCategory {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tools Tool[]

  @@map("tool_categories")
}
